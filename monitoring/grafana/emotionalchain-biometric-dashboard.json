{
  "dashboard": {
    "id": null,
    "title": "EmotionalChain Biometric Monitoring",
    "tags": ["emotionalchain", "biometric", "security"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Biometric Readings per Second",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(emotionalchain_biometric_readings_total[5m])",
            "legendFormat": "{{device_type}} - {{quality_level}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Device Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(emotionalchain_biometric_device_health)",
            "legendFormat": "Average Device Health",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "green", "value": 0.9}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Authenticity Score Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(emotionalchain_biometric_authenticity_score_bucket[5m]))",
            "legendFormat": "95th Percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(emotionalchain_biometric_authenticity_score_bucket[5m]))",
            "legendFormat": "Median",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "Biometric Data Quality by Device Type",
        "type": "bargauge",
        "targets": [
          {
            "expr": "avg by (device_type) (emotionalchain_biometric_authenticity_score)",
            "legendFormat": "{{device_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.8}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Security Alerts",
        "type": "logs",
        "targets": [
          {
            "expr": "rate(emotionalchain_security_alerts_total[5m])",
            "legendFormat": "{{alert_type}} - {{severity}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Byzantine Failures Detected",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(emotionalchain_byzantine_failures_total[1h])",
            "legendFormat": "{{failure_type}} - {{validator_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}